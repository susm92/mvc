<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/logoSUSM_189x179.jpg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {# {{ encore_entry_link_tags('app_proj') }} #}
            <link rel="stylesheet" href="{{ asset('build/app_proj.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }})">
            <span class="site-title">My Symfony Site</span>
        </header>

        <nav>
            <ul>
                <li><a href="{{ path('home') }}">Back to home</a></li>
                <li><a href="{{ path('projAbout') }}">About</a></li>
                <li><a href="{{ path('project') }}">Project</a></li>
            </ul>
        </nav>

        <main class="main">
            {% block body %}{% endblock %}
        </main>

        <header class="site-footer">
            <p>Copyright &copy susm92, Inc. - All Rights Reserved... Added to project.</p>
        </header>
    </body>
</html>
