{% extends "proj/base.html.twig" %}

{% block title %}Start{% endblock %}

{% block body %}

<h1>Välj antal spelare och tryck på nästa!</h1>

<form method="post" action="{{ path('projGame_post')}}">
    <label for="start">Antal spelare (1-3):</label>
    <input type="number" id="start" name="nrOfPlayers" min="1" max="3" required>

    <br><br>

    <button type="submit">Start Game</button>
    <br><br>
</form>

<p class="redirect">
    <a href="{{ path('project') }}">Tillbaka</a>
</p>

{% endblock %}
